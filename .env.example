# Environment
NODE_ENV=development  # or 'production'

# Logging
LOG_LEVEL=info

# Solana
SOLANA_RPC_ENDPOINT_DEV=https://your-dev-rpc-endpoint.example.com
SOLANA_RPC_ENDPOINT_PROD=https://your-prod-rpc-endpoint.example.com

# Triton gRPC
GRPC_ENDPOINT_DEV=https://your-dev-grpc-endpoint.example.com
GRPC_ENDPOINT_PROD=https://your-prod-grpc-endpoint.example.com
GRPC_AUTH_DEV=your-dev-auth-token      # Your development gRPC auth token
GRPC_AUTH_PROD=your-prod-auth-token    # Your production gRPC auth token

# Orca Pools to Monitor (comma-separated list of addresses)
ORCA_POOLS_TO_MONITOR=pool1address,pool2address,pool3address  # Example: SOL/USDC pool,ETH/USDC pool,etc

# Optional: Log file paths
LOG_FILE_PATH=./logs
ERROR_LOG_PATH=./logs/error.log
COMBINED_LOG_PATH=./logs/combined.log 